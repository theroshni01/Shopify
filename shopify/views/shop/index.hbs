<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTSPwWfWCKO_CkyeuuWLYzyyhVO_9sctWTXLw&usqp=CAU"
    alt="Shoppify" width="100%" height="50%">

<marquee behaviour="" direction="">Best Summer Sale</marquee>
<h2>Our Products</h2>
{{#each Products}}
<div class="row row-cols-1 row-cols-md-3 g-4">
  <div class="col">
    {{#each this}}
    <div class="card">
      <img src={{this.imagePath}} class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">{{this.price}}</p>
        <div class="card-footer">
            <button class="btn btn-success">Add to Cart</button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  {{/each}}